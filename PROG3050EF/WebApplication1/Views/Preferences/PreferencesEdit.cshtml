@model GameStore.Models.ViewModels.PreferencesViewModel
@{
    string title = "Preferences:";
    ViewBag.Title = title;
}

<h1 class="mt-3">@title</h1>
<form asp-controller="Preferences" asp-action="PreferencesEdit" method="post" enctype="application/x-www-form-urlencoded">
    

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control" >
            <option value="0">Select your favourite category</option>
            @foreach(Category item in Model.Categories)
            {
                <option value="@item.CategoryId">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PlatformId">Platform</label>
        <select asp-for="PlatformId" class="form-control" >
            <option value="0">Select your favourite platform</option>
            @foreach(Platform item in Model.Platforms)
            {
                <option value="@item.PlatformId">@item.Name</option>
            }
        </select>
    </div>
    <input type="hidden" asp-for="Categories" />
    <input type="hidden" asp-for="Platforms" />
    <input type="hidden" asp-for="CustomerId" />
    <input type="submit" class="btn btn-primary" value="Save Changes" />
    <a asp-controller="Preferences" asp-action="Preferences" class="btn btn-primary">Cancel</a>
</form>
