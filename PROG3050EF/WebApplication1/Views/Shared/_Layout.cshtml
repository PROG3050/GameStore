<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
          crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<style>
    .footer {
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        text-align: center;
    }
    .submenu{
        top:auto;
    }
    .vl {
        border-left: 2px solid white;
        height: 100%;
        position: relative;
        margin-left: .4em;
        margin-right: .4em;
    }
    .socialsharing p {
        display: inline-block;
    }

    .socialsharing a {
        display: inline-block;
        padding: .7em;
        line-height: 0;
        margin-bottom: 2em;
    }

    .socialsharing path {
        fill: #1DA1F2;
    }

    .socialsharing svg {
        width: 24px;
        height: 24px;
    }

    .rating {
    float:left;
    }
    .rating:not(:checked) > input {
    position:absolute;
    top:-9999px;
    clip:rect(0,0,0,0);
    }

    .rating:not(:checked) > label {
        float:right;
        width:1em;
        padding:0 .1em;
        overflow:hidden;
        white-space:nowrap;
        cursor:pointer;
        font-size:3em;
        line-height:1.2;
        color:#e0e0e0;
    }
    .rating:not(:checked) > label:before {
    font-family: FontAwesome;
    content: "\f005";
    }
    .rating > input:checked ~ label {
        color: #fa0;
    }
    .rating:not(:checked) > label:hover,
    .rating:not(:checked) > label:hover ~ label {
    color: #fe0;
    }

    .rating > input:checked + label:hover,
    .rating > input:checked + label:hover ~ label,
    .rating > input:checked ~ label:hover,
    .rating > input:checked ~ label:hover ~ label,
    .rating > label:hover ~ input:checked ~ label {
    color: #ea0;
    }
     
</style>
</head>
<body>
    <header>
        @using Microsoft.AspNetCore.Identity
        @inject SignInManager<User> signInManager
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @if (signInManager.IsSignedIn(User))
                {
                        if (!User.IsInRole("Admin"))
                        {
                            <ul class="navbar-nav ml-auto">
                                    <li class="nav-item mt-1 text-white">
                                         <a asp-action="List" asp-controller="Game"
                                           asp-area="" class="nav-link text-white">Games</a>
                                    </li>
                                     <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a asp-action="List" asp-controller="Merchandise"
                                           asp-area="" class="nav-link text-white">Merchandise</a>
                                    </li>
                                    <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a asp-action="List" asp-controller="Event"
                                           asp-area="" class="nav-link text-white">Events</a>
                                    </li>
                                    <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a asp-action="Search" asp-controller="FriendsAndFamily"
                                           asp-area="" class="nav-link text-white">F&F</a>
                                    </li>
                            </ul>
                    }
                    else
                    {
                            <ul class="navbar-nav ml-auto">
                                    <li class="nav-item mt-1 text-white">
                                         <a asp-action="List" asp-controller="AdminGame"
                                           asp-area="Admin" class="nav-link text-white">List of Games</a>
                                    </li>
                                    <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a class="nav-link text-white">List of Merchandise</a>
                                          
                                    </li>
                                     <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a class="nav-link text-white">List of Events</a>
                                    </li>
                                     <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                     <li class="nav-item mt-1 text-white">
                                         <a class="nav-link text-white">List of Orders</a>   
                                    </li>
                                     <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a class="nav-link text-white">List of Game Reviews</a>
                                    </li>
                                     <li class="nav-item mt-1"> 
                                        <div class="vl"></div>
                                    </li>
                                    <li class="nav-item mt-1 text-white">
                                         <a class="nav-link text-white">Reports</a>
                                    </li>
                            </ul>
                    }
                }
                
                <div class="collapse navbar-collapse " id="menu">
                <ul class="navbar-nav ml-auto">
                    
                   @if (signInManager.IsSignedIn(User))
                   {
                        if (!User.IsInRole("Admin"))
                        {
                            // signed-in user - Log Out button and username
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Index" asp-controller="Cart" asp-area="">
                                    <span class="fas fa-shopping-cart"></span>&nbsp;Cart
                                    <vc:cart-badge></vc:cart-badge>
                                </a>
                            </li>

                           <li class="dropdown mt-2 mr-3 text-light">
                                <a class="nav-item dropdown-toggle text-light" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                  My Account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                  <a class="dropdown-item" asp-action="ProfileInformation" asp-controller="Profile"
                               asp-area="">Profile Information</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" asp-action="Preferences" asp-controller="Preferences"
                               asp-area="">Preferences</a>
                                  <div class="dropdown-divider"></div>

                                   <a class="dropdown-item dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Addresses
                                   </a>
                                   <div class="dropdown-menu submenu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-action="ShippingAddress" asp-controller="Address"
                               asp-area="">Shipping Address</a>
                                    <a class="dropdown-item" asp-action="MailingAddress" asp-controller="Address"
                               asp-area="">Mailing Address</a>
                                  </div>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" asp-action="Index" asp-controller="CreditCard"
                               asp-area="">Payment Information</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" asp-action="MyList" asp-controller="FriendsAndFamily"
                               asp-area="">Family & Friends</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" asp-action="MyList" asp-controller="WishList"
                               asp-area="">My Wish List</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item">My Reviews</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" asp-action="MyList" asp-controller="Event"
                               asp-area="">My Events</a>
                                  <div class="dropdown-divider"></div>
                                  <a class="dropdown-item" asp-action="List" asp-controller="Order"
                               asp-area="">My Orders</a>
                                </div>
                            </li>      
                        }
                        <li class="nav-item mt-1">
                        
                            <form method="post" asp-action="Logout"
                                  asp-controller="Account" asp-area="">
                                <input type="submit" value="Log Out"
                                       class="btn btn-outline-light" />  
                            </form>
                        </li>
                   }      
                   else
                   {
                        // get current action
                        var action = ViewContext.RouteData.Values["action"]?.ToString();

                        // anonymous user - Register link and Log In button
                        <li class="nav-item">
                            <a asp-action="Register" asp-controller="Account"
                               asp-area="" class="nav-link">Register</a>
                        </li>
                        <li class="nav-item">
                            <a asp-action="Login" asp-controller="Account"
                               asp-area="" class="btn btn-outline-light">Log In</a>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 mb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-2">
        <div class="container">
            &copy; 2022 - GameStore - PROG-3050
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
