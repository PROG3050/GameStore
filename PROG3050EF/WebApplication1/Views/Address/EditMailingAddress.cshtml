@using GameStore.Data.UtilityClasses
@model GameStore.Models.ViewModels.AddressViewModel
@{
    string title = "Edit Mailing Address:";
    ViewBag.Title = title;
}

<h1 class="mt-3">@title</h1>

<form asp-controller="Address" asp-action="EditMailingAddress" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input type="text" asp-for="City" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Province">Province</label>
        <select asp-for="Province" class="form-control" >
            <option value="0">Select your province</option>
            @foreach(Province item in Model.Provinces)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="PostalCode">Postal Code</label>
        <input type="text" asp-for="PostalCode" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="IsSame">Is shipping address the same?</label>
        <input type="checkbox" asp-for="IsSame" class="form-check"/>
    </div>

    <input type="hidden" asp-for="CustomerId" />

    <input type="submit" class="btn btn-primary" value="Save Changes" />
    <a asp-controller="Address" asp-action="MailingAddress" class="btn btn-primary">Cancel</a>
</form>
