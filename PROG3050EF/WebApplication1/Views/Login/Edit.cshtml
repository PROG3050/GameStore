@model Customer
@{
    string title = ViewBag.Action + " Account";
    ViewBag.Title = title;
}

<h1>@title</h1>
<form asp-controller="Login" asp-action="@ViewBag.Action" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nickname">Nickname</label>
        <input type="text" asp-for="Nickname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Dob">Date Of Birth</label>
        <input type="datetime" asp-for="Dob" class="form-control" />
    </div>



    <input type="hidden" asp-for="CustId" />

    <input type="submit" class="btn btn-primary" value="@ViewBag.Action" />
    <a asp-controller="Login" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

