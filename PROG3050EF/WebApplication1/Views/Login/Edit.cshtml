@model Prog3050A1.Data.Customer
@{
    string title = ViewBag.Action + " Account";
    ViewBag.Title = title;
}

<h1>@title</h1>
<form asp-controller="Login" asp-action="@ViewBag.Action" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nickname">Nickname</label>
        <input type="text" asp-for="Nickname" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="text" asp-for="Password" class="form-control" />
    </div>

    <input type="hidden" asp-for="PreferedPlatform_Id" value="1" />
    <input type="hidden" asp-for="PreferedCategory_Id" value="1" />
    <input type="hidden" asp-for="Cust_Id" />

    <input type="submit" class="btn btn-primary" value="@ViewBag.Action" />
    <a asp-controller="Login" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

