@model List<WebApplication1.Data.Customer>
@{
    ViewData["Title"] = "All Customers";
}

<h1>@ViewData["Title"]</h1>
<a asp-controller="Login" asp-action="Add">Register</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Customer Nickname</th>
            <th>Customer Email</th>
            <th>Customer First Name</th>
            <th>Customer Last Name</th>
            <th>Customer Date Of Birth</th>
            <th>Customer Shipping Address</th>
            <th>Customer Shipping Postal Code</th>
            <th>Customer Mailing Address</th>
            <th>Customer Mailing Postal Code</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (WebApplication1.Data.Customer customer in Model)
        {
            <tr>
                <td>@customer.Nickname</td>
                <td>@customer.Email</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Dob</td>
                <td>@customer.ShippingAddress</td>
                <td>@customer.ShippingPostalCode</td>
                <td>@customer.MailingAddress</td>
                <td>@customer.MailingPostalCode</td>

                <td>
                    <a asp-controller="Login" asp-action="Edit" asp-route-id="@customer.CustId">Edit</a>
                    <span class="linkSpacer">|</span>
                    <a asp-controller="Login" asp-action="Delete" asp-route-id="@customer.CustId">Delete</a>
                    <span class="linkSpacer">|</span>
                </td>
            </tr>
        }
    </tbody>
</table>

