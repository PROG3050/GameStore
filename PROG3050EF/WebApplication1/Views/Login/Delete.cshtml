@model Prog3050A1.Data.Customer
@{
    ViewBag.Title = "Delete Customer";
}

<h2>Confirm Deletion</h2>
<h3>@Model.Nickname</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="cust_id" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Company" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
