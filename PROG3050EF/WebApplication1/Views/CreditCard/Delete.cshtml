@model CreditCardViewModel
@{
    ViewBag.Title = "Delete Card";
}

<h2 class="mt-3">Confirm Deletion</h2>
<h3 class="mt-1">Card Name: @Model.CardName</h3>
<h3 class="mt-1">Card Number: @Model.CardNumber</h3>
<h3 class="mt-1">Expiration Date: @Model.Month / @Model.Year</h3>

<form asp-controller="CreditCard" asp-action="Delete" method="post" enctype="application/x-www-form-urlencoded">
    <input type="hidden" asp-for="CustomerId" />
    <input type="hidden" asp-for="CreditId" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="CreditCard" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>
