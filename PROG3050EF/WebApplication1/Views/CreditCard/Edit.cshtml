@using GameStore.Data.UtilityClasses
@model CreditCardViewModel
@{
    string title = ViewBag.Action + " Card";
    ViewBag.Title = title;
}

<h1 class="mt-3">@title</h1>
<form asp-controller="CreditCard" asp-action="@ViewBag.Action" method="post" enctype="application/x-www-form-urlencoded">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CardName">Card Name</label>
        <input type="text" asp-for="CardName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="CardNumber">Card Number</label>
        <input type="text" asp-for="CardNumber" class="form-control" />
    </div>

    <div class="form-group">
        <h3>Expiration Date</h3>

        <label asp-for="Month">Month</label>
        <select asp-for="Month" class="form-control" >
            <option value="0">Select month</option>
            @foreach(NumericValue item in Model.Months)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>


        <label asp-for="Year">Year</label>
        <select asp-for="Year" class="form-control" >
            <option value="0">Select year</option>
            @foreach(NumericValue item in Model.Years)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>


    <input type="hidden" asp-for="CreditId" />
    <input type="hidden" asp-for="CustomerId" />

    <input type="submit" class="btn btn-primary" value="@ViewBag.Action" />
    <a asp-controller="CreditCard" asp-action="Index" class="btn btn-primary">Cancel</a>
</form>

