@using GameStore.Models.ExtensionModels
@model List<WishList>
@{
    ViewData["Title"] = ViewBag.UserName + "'s Wish List";
}

<h1 class="mt-3">@ViewData["Title"]</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count == 0)
        {
            <p><b>@ViewBag.UserName Wish List is empty.</b></p>
        }
        else 
        {
            @foreach (WishList item in Model)
            {
                if (item.GameId != 0)
                {
                    <tr>
                    <td>Game</td>
                    <td>@item.Game.Name</td>
                    <td>@item.Game.Price</td>
                    <td>
                        <a asp-action="Details" asp-controller="Game" asp-area="" 
                             asp-route-id="@item.Game.GameId"
                             asp-route-slug="@item.Game.Name.Slug()" class="btn btn-primary">
                             Details
                        </a> 
                    </td>
                    </tr>
                }
                else
                {
                    <tr>
                    <td>Merchandise</td>
                    <td>@item.Merchandise.Name</td>
                    <td>@item.Merchandise.Price</td>
                    <td>
                        Some Action
                    </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
