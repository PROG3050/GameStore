@using System.Web;
@using Microsoft.Web.Helpers;
@using GameStore.Models.ExtensionModels;
@model List<WishList>
@{
    ViewData["Title"] = ViewBag.Username + "'s Wish List";
}

<h1 class="mt-3">@ViewData["Title"]</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Type</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count == 0)
        {
            <p><b>User has an empty wish list.</b></p>
        }
        else 
        {
            @foreach (WishList item in Model)
            {
                if (item.GameId != 0)
                {
                    <tr>
                    <td>Game</td>
                    <td>@item.Game.Name</td>
                    <td>@item.Game.Price</td> 
                    </tr>
                }
                else
                {
                    <tr>
                    <td>Merchandise</td>
                    <td>@item.Merchandise.Name</td>
                    <td>@item.Merchandise.Price</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>
