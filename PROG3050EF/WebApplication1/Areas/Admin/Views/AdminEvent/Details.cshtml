@using GameStore.Data.UtilityClasses
@using GameStore.Models.ViewModels
@using GameStore.Models.ExtensionModels
@using GameStore.Data
@using Microsoft.AspNetCore.Mvc
@using GameStore
@using GameStore.Models
@using GameStore.TagHelpers
@using GameStore.Data.Static_Data
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, GameStore
@model Event

@{
    ViewData["Title"] = " | Event Details";
}

<h1 class="mt-3">Event Details</h1>

    <table class="table table-bordered table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                    <th>
                        Event Name
                    </th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Duration</th>
            </tr>
        </thead>
        <tbody>

                <tr>
                    <td>
                        <b>@Model.Name</b>
                    </td>
                    <td>
                        @Model.Description
                    </td>
                    <td>
                        @Model.Date.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @Model.Duration
                    </td>
                </tr>
            
        </tbody>
    </table>

    <div class="btn-group" role="group" aria-label="Basic example">
        <form asp-action="Edit" asp-controller="AdminEvent" method="get">
            <button type="submit" name="id" value="@Model.EventId" class="btn btn-primary">
                Edit</button>
        </form>

        <form asp-action="Delete" asp-controller="AdminEvent" method="get">
            <button type="submit" name="id" value="@Model.EventId" class="btn btn-primary ml-1">
                Delete</button>
        </form>
    </div>

    <a asp-controller="AdminEvent" asp-action="List" asp-area="Admin" class="link-primary ml-2">Go back</a>